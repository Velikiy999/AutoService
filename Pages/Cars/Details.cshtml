@page
@model AutoService.Pages_Cars.DetailsModel

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Автомобіль</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Марка
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Make)
        </dd>
        <dt class="col-sm-2">
            Модель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            Рік
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Year)
        </dd>
        <dt class="col-sm-2">
            Номер реєстрації
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            Опис
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Description)
        </dd>
        <dt class="col-sm-2">
            Клієнт
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Client.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Car.Id">Редагувати</a> |
    <a asp-page="./Index">Повернутися до списку</a>
</div>
