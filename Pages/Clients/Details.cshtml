@page
@model AutoService.Pages_Clients.DetailsModel

@{
    ViewData["Title"] = "Детальніше";
}

<h1>Детальніше</h1>

<div>
    <h4>Клієнт</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Ім'я</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
        </dd>

        <dt class="col-sm-2">
            <label>Електронна пошта</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Email)
        </dd>

        <dt class="col-sm-2">
            <label>Телефон</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Phone)
        </dd>

        <dt class="col-sm-2">
            <label>Адреса</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Client.Id">Редагувати</a> |
    <a asp-page="./Index">Назад до списку</a>
</div>
