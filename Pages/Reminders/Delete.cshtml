@page
@model AutoService.Pages_Reminders.DeleteModel

@{
    ViewData["Title"] = "Видалення";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <h4>Нагадування</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Клієнт</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder.Client.Email)
        </dd>
        <dt class="col-sm-2">
            <strong>Дата нагадування</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder.ReminderDate)
        </dd>
        <dt class="col-sm-2">
            <strong>Повідомлення</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder.Message)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Reminder.Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-page="./Index">Повернутись до списку</a>
    </form>
</div>
