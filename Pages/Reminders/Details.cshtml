@page
@model AutoService.Pages_Reminders.DetailsModel

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Нагадування</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>Клієнт</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder.Client.Email)
        </dd>
        <dt class="col-sm-2">
            <strong>Дата нагадування</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder.ReminderDate)
        </dd>
        <dt class="col-sm-2">
            <strong>Повідомлення</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder.Message)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reminder.Id">Редагувати</a> |
    <a asp-page="./Index">Повернутись до списку</a>
</div>
