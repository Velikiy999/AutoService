@page
@model AutoService.Pages_ServiceRecords.DetailsModel

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>Запис сервісного обслуговування</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Автомобіль</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceRecord.Car.Make)
        </dd>
        <dt class="col-sm-2">
            <label>Дата обслуговування</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceRecord.ServiceDate)
        </dd>
        <dt class="col-sm-2">
            <label>Опис</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceRecord.Description)
        </dd>
        <dt class="col-sm-2">
            <label>Ціна</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceRecord.Price)
        </dd>
        <dt class="col-sm-2">
            <label>Статус</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceRecord.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ServiceRecord.Id">Редагувати</a> |
    <a asp-page="./Index">Повернутись до списку</a>
</div>
