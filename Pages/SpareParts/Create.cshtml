@page
@model AutoService.Pages_SpareParts.CreateModel

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити</h1>

<h4>Запасні Частини</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SparePart.Name" class="control-label">Назва</label>
                <input asp-for="SparePart.Name" class="form-control" />
                <span asp-validation-for="SparePart.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SparePart.Description" class="control-label">Опис</label>
                <input asp-for="SparePart.Description" class="form-control" />
                <span asp-validation-for="SparePart.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SparePart.Quantity" class="control-label">Кількість</label>
                <input asp-for="SparePart.Quantity" class="form-control" />
                <span asp-validation-for="SparePart.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SparePart.Price" class="control-label">Ціна</label>
                <input asp-for="SparePart.Price" class="form-control" />
                <span asp-validation-for="SparePart.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад до списку</a>
</div>
