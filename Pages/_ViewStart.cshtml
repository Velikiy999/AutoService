@if (Context.User.Identity.IsAuthenticated)
{
    if (Context.User.IsInRole("Admin"))
    {
        Layout = "_AdminLayout";
    }
    else if (Context.User.IsInRole("Mechanic"))
    {
        Layout = "_MechanicLayout";
    }
    else if (Context.User.IsInRole("Client"))
    {
        Layout = "_UserLayout";
    }
    else
    {
        Layout = "_UserLayout";
    }
}
else
{
    Layout = "_DefaultLayout";
}
